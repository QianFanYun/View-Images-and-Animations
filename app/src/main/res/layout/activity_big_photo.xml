<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlidePhotoView.BigPhotoActivity">

    <net.archeryc.glidedemo.GlidePhotoView.HackyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></net.archeryc.glidedemo.GlidePhotoView.HackyViewPager>
    
    <net.archeryc.glidedemo.GlidePhotoView.CircleIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:ci_drawable="@drawable/ci_drawable_selected"
        app:ci_drawable_unselected="@drawable/ci_drawable_unselected"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        >

    </net.archeryc.glidedemo.GlidePhotoView.CircleIndicator>
</FrameLayout>
